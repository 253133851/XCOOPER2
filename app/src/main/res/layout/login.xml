<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_dark">

    <RelativeLayout
        android:id="@+id/rl_login_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color_dark">

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/login_button_bg_color"
            android:text="Login"
            android:textColor="@color/main_color_dark" />

        <ImageView
            android:id="@+id/iv_login1"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_above="@+id/iv_login_headpicture"
            android:layout_alignLeft="@+id/iv_login2"
            android:layout_alignRight="@+id/iv_login2"
            android:layout_marginBottom="10dp"
            android:background="#33FFFFFF" />

        <ImageView
            android:id="@+id/iv_login3"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_above="@id/bt_login"
            android:layout_alignLeft="@id/bt_login"
            android:layout_alignRight="@id/bt_login"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="#33FFFFFF" />

        <ImageView
            android:id="@+id/iv_login_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@id/iv_login3"
            android:layout_alignLeft="@id/iv_login3"
            android:layout_margin="5dp"
            android:background="@drawable/mima1" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_login3"
            android:layout_alignBottom="@id/iv_login_password"
            android:layout_alignRight="@id/iv_login3"
            android:layout_alignTop="@id/iv_login_password"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_login_password"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="#AAFFFFFF" />

        <ImageView
            android:id="@+id/iv_login_headpicture"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@id/iv_login2"
            android:layout_alignLeft="@id/iv_login2"
            android:layout_margin="5dp"
            android:background="@drawable/zhanghao1" />

        <EditText
            android:id="@+id/et_login_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_login2"
            android:layout_alignRight="@id/et_login_password"
            android:layout_alignTop="@id/iv_login_headpicture"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_login_headpicture"
            android:background="@null"
            android:textColor="#AAFFFFFF" />

        <ImageView
            android:id="@+id/iv_login2"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_above="@+id/iv_login_password"
            android:layout_alignLeft="@+id/iv_login3"
            android:layout_alignRight="@+id/iv_login3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#33FFFFFF" />

        <TextView
            android:id="@+id/tv_huanhuandaojia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="XCOOPER"
            android:textColor="#66FFFFFF"
            android:textSize="48sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_huanhuandaojia"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Connect everything"
            android:textColor="#66FFFFFF"
            android:textSize="24sp" />

    </RelativeLayout>
</FrameLayout>